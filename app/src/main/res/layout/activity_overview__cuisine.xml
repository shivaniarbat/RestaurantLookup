<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Overview_Cuisine">

    <TextView
        android:id="@+id/overviewTitle"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:textSize="32dp"
        android:textStyle="bold"
        android:shadowColor="#0f0f0f"
        android:shadowRadius="2"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="@color/colorMainPageOverview"
        app:layout_constraintBottom_toTopOf="@+id/cuisineInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cuisineInfo"
        android:layout_width="336dp"
        android:layout_height="243dp"
        android:scrollbars = "vertical"
        app:layout_constraintBottom_toTopOf="@+id/cuisineImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overviewTitle" />

    <ImageView
        android:id="@+id/cuisineImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cuisineInfo" />

</android.support.constraint.ConstraintLayout>